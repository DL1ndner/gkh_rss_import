{
  "name": "gkh/gkh-rss-import",
  "type": "typo3-cms-extension",
  "description": "Imports a RSS feed and show the content on a FE page.",
  "license": ["GPL-2.0-or-later"],
  "require": {
    "typo3/cms-core": "^7.6 || ^8.7",
    "ezyang/htmlpurifier": "^4.9"
  },
  "require-dev": {
    "ext-json": "*",
    "namelesscoder/typo3-repository-client": "^2.0",
    "nimut/testing-framework": "^3.0",
    "helhum/typo3-composer-setup": "^0.5.4"
  },
  "autoload": {
    "psr-4": {
      "GertKaaeHansen\\GkhRssImport\\": "Classes"
    },
    "files": [
      "Resources/PHP/lastRSS.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "GertKaaeHansen\\GkhRssImport\\Tests\\": "Tests"
    }
  },
  "replace": {
    "typo3-ter/gkh-rss-import": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/gkh_rss_import ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/gkh_rss_import"
    ],
    "phpunit": "TYPO3_PATH_ROOT=$PWD/.Build/Web .Build/bin/phpunit --colors -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "gkh_rss_import",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
